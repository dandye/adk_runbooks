# DAC Agent Environment Configuration

# Google API Key for Gemini models
GOOGLE_API_KEY=your_google_api_key_here

# SOAR Configuration
SOAR_URL=https://your-soar-instance.example.com
SOAR_APP_KEY=your_soar_app_key

# Chronicle/SecOps Configuration
CHRONICLE_PROJECT_ID=your_gcp_project_id
CHRONICLE_CUSTOMER_ID=your_chronicle_customer_id
CHRONICLE_REGION=us

# GitHub Configuration
GITHUB_TOKEN=your_github_token

# VirusTotal (optional)
VT_APIKEY=your_virustotal_api_key

# Rule Repository Configuration
RULES_REPOSITORY_PATH=../rules
RULES_BRANCH_PREFIX=tune/
DEFAULT_BASE_BRANCH=main

# Monitoring Configuration
SOAR_POLLING_INTERVAL=300  # seconds
CASE_LOOKBACK_DAYS=7
AUTO_TUNE_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=dac-agent.log